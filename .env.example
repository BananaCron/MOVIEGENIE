APP_NAME=Lumen           # Name of your Lumen application
APP_ENV=local            # Environment (local, production, etc.)
APP_KEY=                 # Application encryption key (should be filled)

APP_DEBUG=true           # Enable debug mode (should be false in production)
APP_URL=http://localhost # URL of your application
APP_TIMEZONE=UTC         # Default timezone for your application

LOG_CHANNEL=stack        # Logging channel (stack, single, daily, etc.)
LOG_SLACK_WEBHOOK_URL=   # Slack webhook URL for logging (optional)

DB_CONNECTION=mysql      # Database connection type
DB_HOST=127.0.0.1        # Database host
DB_PORT=3306             # Database port
DB_DATABASE=homestead    # Database name
DB_USERNAME=homestead    # Database username
DB_PASSWORD=secret       # Database password

CACHE_DRIVER=file        # Cache driver (file, database, redis, etc.)
QUEUE_CONNECTION=sync    # Queue connection (sync, database, redis, etc.)
